.container.my-3
    .row 
        .col-12
            if (user)
                a(href="/users/not-friend" class="btn btn-primary") 
                    | List User 
                    span(
                        class="btn btn-light"
                    ) #{users.length ? users.length : 0}
                a(href="/users/friends" class="btn btn-primary") 
                    | List friend
                    span(
                        class="btn btn-light"
                    ) #{user.listFriend.length ? user.listFriend.length : 0}
                a(href="/users/request" class="btn btn-primary") 
                    | Request sent 
                    span(
                        class="btn btn-light"
                    ) #{user.requestFriend.length ? user.requestFriend.length : 0}
                a(href="/users/accept" class="btn btn-primary") 
                    | Friend request 
                    span(
                        class="btn btn-light"
                        badge-users-accept=user.id
                    ) #{user.acceptFriend.length ? user.acceptFriend.length : 0}
    style.

        /* Button styles */
        .inner-buttons {
        display: flex;
        gap: 10px;
        }

        .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        cursor: pointer;
        transition: opacity 0.2s ease;
        }

        .btn:hover {
        opacity: 0.9;
        }

        .btn-primary {
        background-color: #4CAF50;
        color: white;
        }

        .btn-secondary {
        background-color: #95a5a6;
        color: white;
        }