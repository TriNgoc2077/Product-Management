.container.my-3
    .row 
        .col-12
            a(href="/users/not-friend" class="btn btn-primary") List User 
            a(href="/users/friends" class="btn btn-primary") List friend
            a(href="/users/request" class="btn btn-primary") Request sent 
            a(href="/users/accept" class="btn btn-primary") Friend request 
    style.

        /* Button styles */
        .inner-buttons {
        display: flex;
        gap: 10px;
        }

        .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        cursor: pointer;
        transition: opacity 0.2s ease;
        }

        .btn:hover {
        opacity: 0.9;
        }

        .btn-primary {
        background-color: #4CAF50;
        color: white;
        }

        .btn-secondary {
        background-color: #95a5a6;
        color: white;
        }