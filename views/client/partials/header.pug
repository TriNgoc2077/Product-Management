include ../mixins/sub-menu.pug

header.header.border-bottom

    // Main header
    .container.py-3
        nav.navbar.navbar-expand-lg.p-0
            a.navbar-brand.me-4(href="/")
                img(
                    src="https://res.cloudinary.com/daq721xar/image/upload/v1735363338/bnxtcu0ma1ystkbamkds.svg"
                    alt="Logo"
                    class="img-fluid"
                    width="100px"
                    height="200px"
                )

            button.navbar-toggler(
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
            )
                span.navbar-toggler-icon

            #navbarNav.collapse.navbar-collapse
                // Search form
                form.d-flex.mx-4.flex-grow-1(
                    action="/search"
                    method="GET"
                )
                    .input-group
                        //- select.form-select(
                        //-     style="max-width: 150px;"
                        //-     name="category"
                        //- )
                        //-     option(value="") All Categories
                        //-     each category in layoutProductsCategory
                        //-         option(
                        //-             value=category.id
                        //-             selected=(category.id == selectedCategory)
                        //-         ) #{category.title}
                        input.form-control(
                            type="text"
                            placeholder="Search products..."
                            value=keyword
                            name="keyword"
                        )
                        button.btn.btn-primary(type="submit")
                            i.fas.fa-search

                // Navigation
                ul.navbar-nav.ms-auto.align-items-center
                    li.nav-item
                        a.nav-link.active(href="/")
                            i.fas.fa-home.me-1
                            | Home
                    li.nav-item.sub-menu
                        -const patchProduct = "/products";
                        a.nav-link(href=`${patchProduct}`)
                            i.fas.fa-th-large.me-1
                            | Products
                        +sub-menu(layoutProductsCategory, patchProduct)
                    
                    // Cart
                    li.nav-item
                        a.nav-link.position-relative(
                            href="/cart"
                            data-bs-toggle="tooltip"
                            title="Shopping Cart"
                        )
                            i.fas.fa-shopping-cart.fs-5
                            span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-danger #{miniCart ? miniCart.products.length : 0}

                    // Wishlist
                    li.nav-item
                        a.nav-link.position-relative(
                            href="/wishlist"
                            data-bs-toggle="tooltip"
                            title="Wishlist"
                        )
                            i.fas.fa-heart.fs-5
                            span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-danger 0
                    // Auth buttons
                    if user
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle(
                                href="#"
                                id="userDropdown"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            )
                                img.rounded-circle.me-2(
                                    src=user.avatar || "https://icons.veryicon.com/png/o/miscellaneous/rookie-official-icon-gallery/225-default-avatar.png"
                                    alt="User Avatar"
                                    width="28"
                                    height="28"
                                )
                                span #{user.fullName}
                            ul.dropdown-menu.dropdown-menu-end(
                                aria-labelledby="userDropdown"
                            )
                                li
                                    a.dropdown-item(href="/user/profile")
                                        i.fas.fa-user.me-2
                                        | My Profile
                                li
                                    a.dropdown-item(href="/user/orders")
                                        i.fas.fa-shopping-bag.me-2
                                        | My Orders
                                li
                                    a.dropdown-item(href="/user/wishlist")
                                        i.fas.fa-heart.me-2
                                        | My Wishlist
                                li
                                    hr.dropdown-divider
                                li
                                    a.dropdown-item.text-danger(href="/user/logout")
                                        i.fas.fa-sign-out-alt.me-2
                                        | Logout
                    else
                        li.nav-item.ms-2
                            a.btn.btn-outline-primary(href="/user/login")
                                i.fas.fa-sign-in-alt.me-2
                                | Login
                        li.nav-item.ms-2
                            a.btn.btn-primary(href="/user/register")
                                i.fas.fa-user-plus.me-2
                                | Register
    style.
        /* sub-menu styling */  
        .sub-menu {  
            position: relative;  
            z-index: 999;  
        }  

        .sub-menu ul {  
            position: absolute;  
            right: 0;  
            top: 100%;  
            list-style: none;  
            padding: 8px 0;  
            margin: 0;  
            background: #ffffff;  
            min-width: 220px;  
            display: none;  
            border-radius: 8px;  
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);  
            animation: fadeIn 0.3s ease;  
        }  

        .sub-menu ul li {  
            padding: 0;  
            position: relative;  
        }  

        .sub-menu ul li a {  
            padding: 12px 20px;  
            color: #333;  
            display: block;  
            text-decoration: none;  
            font-size: 14px;  
            transition: all 0.3s ease;  
            white-space: nowrap;  
        }  

        .sub-menu ul li:hover > a {  
            background: #f8f9fa;  
            color: #007bff;  
            padding-left: 25px;  
        }  

        .sub-menu:hover > ul {  
            display: block;  
        }  

        .sub-menu ul li ul {  
            right: 100%;  
            top: 0;  
        }  

        .sub-menu ul li:hover > ul {  
            display: block;  
        }  

        /* Thêm mũi tên cho các mục có submenu */  
        .sub-menu ul li:has(> ul) > a::after {  
            content: '›';  
            position: absolute;  
            right: 15px;  
            transform: rotate(180deg);  
        }  

        /* Animation cho menu */  
        @keyframes fadeIn {  
            from {  
                opacity: 0;  
                transform: translateY(10px);  
            }  
            to {  
                opacity: 1;  
                transform: translateY(0);  
            }  
        }  

        /* Thêm separator giữa các mục menu */  
        .sub-menu ul li:not(:last-child) {  
            border-bottom: 1px solid #eee;  
        }  

        /* Hover effect cho menu chính */  
        .sub-menu > a.nav-link {  
            position: relative;  
        }  

        .sub-menu > a.nav-link::after {  
            content: '▾';  
            margin-left: 5px;  
            display: inline-block;  
            transition: transform 0.3s ease;  
        }  

        .sub-menu:hover > a.nav-link::after {  
            transform: rotate(180deg);  
        }  

        span {
            cursor: pointer;
        }