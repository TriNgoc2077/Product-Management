extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main
  .container.py-5
    .row.mb-4
      .col-12
        +box-head(titlePage)
        .input-group.w-50.mx-auto.mb-5
          input.form-control(type="text" placeholder="Search products...")
          .input-group-append
            button.btn.btn-primary
              i.fas.fa-search
    
    .row.product-grid
      +product-grid(products)

    


    