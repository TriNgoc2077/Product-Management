extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
block main
    h1(class="alert text-success alert-dismissible fade show") Product category page
                           
    .card.mb-3 
        .card-header List
            .card-body 
                .row 
                    .col-8
                    .col-4
                        a(
                            href=`${prefixAdmin}/product-category/create`
                            class="btn btn-outline-success"
                        ) + Add new
                table(
                    class = "table table-hover table-sm"
                    checkbox-multi
                )

                    thead
                        tr
                            th 
                                input(
                                    type="checkbox"
                                    name="checkall"
                                )
                            th Order 
                            th Picture 
                            th Title 
                            th Position
                            th Status 
                            th To-do
                    tbody 
                        +table-tree(records)