extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main  
    +alert-error(3000)
    +alert-success(3000)
    h1(class="mb-4") Edit product 
    //- div #{product} //transmitted from the controller
    form(
        action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for="title") Title 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=product.title
            )
        div(class="form-group")
            label(for="desc") Description 
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            )  #{product.description}
        div(class="form-group")
            label(for="price") Price 
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                min="0"
                value=product.price
            ) 
        div(class="form-group")
            label(for="discount") % Discount 
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                min="0"
                value=product.discountPercentage
            ) 
        div(class="form-group")
            label(for="discount") Quantity 
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                min="0"
                value=product.stock
            )
        div(class="form-group" upload-image)
            label(for="thumbnail") Picture 
            input(
                type="file"
                class="form-control"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=product.thumbnail
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
            label(for="discount" class="d-block") Position 
            input(
                type="number"
                class="form-control-file"
                id="position"
                name="position"
                placeholder="auto increase"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(product.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-change-inline") Active 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(product.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-change-inline") Inactive
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update
    script(src="/admin/js/product.js") 