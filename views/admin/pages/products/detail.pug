extends ../../layouts/default.pug 

block main 
    h1(class="alert text-success alert-dismissible fade show mb-4") Product Details
    if (product.title) 
        h1(class="mb-4") #{product.title}
    if (product.price)
        div(class="mb-4") Price: <b>#{product.price}$</b>
    if (product.discountPercentage)
        div(class="mb-4") DiscountPercentage: <b>#{product.discountPercentage}%</b>
    if (product.stock)
        div(class="mb-4") Stock: <b>#{product.stock}</b>
    if (product.thumbnail)
        div(class="mb-4")
            img(src=product.thumbnail style="width: 100px")
    if (product.status)
        div(class="mb-4")
            span Status: 
            if (product.status === "active")
                span(class="btn btn-success") Active 
            else 
                span(class="btn btn-danger") Inactive
    if  (product.description)
        div(class="mb-4") #{product.description}
    a(href=`${prefixAdmin}/products/edit/${product.id}` class="btn btn-warning") Edit 
    script(src="/admin/js/product.js") 
