extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
block main
    +alert-success(5000)

    h1(class="alert text-success alert-dismissible fade show") Product list page

    .card.mb-3 
        .card-header Filter and Find 
            .card-body 
                .row
                    .col-6
                        +filter-status(filterStatus)
                    .col-6 
                        +search(keyword)
    .card.mb-3 
        .card-header List
            .card-body 
                +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                table(
                    class = "table table-hover table-sm"
                    checkbox-multi
                )

                    thead
                        tr
                            th 
                                input(
                                    type="checkbox"
                                    name="checkall"
                                )
                            th Order 
                            th Picture 
                            th Title 
                            th Price 
                            th Position
                            th Status 
                            th To-do
                    tbody 
                        each item, index in products  
                            if (item.deleted == false)
                                tr 
                                    td 
                                        input(
                                            type="checkbox"
                                            name="id"
                                            value=item.id
                                        )
                                    td #{index}
                                    td 
                                        img(
                                            src=item.thumbnail, 
                                            alt=item.title
                                            width="100px"
                                            height="auto"
                                        )
                                        td #{item.title}
                                        td #{item.price}$
                                        td 
                                            input(
                                                type="number"
                                                value=item.position 
                                                style="width: 60px"
                                                min="1"
                                                name="position"
                                            )
                                        td 
                                            if (item.status == "active")
                                                a(
                                                    href="javascript:;"  
                                                    data-status="active"
                                                    data-id=item.id
                                                    button-change-status
                                                    class="btn btn-success"
                                                ) #{item.status}
                                            //- use java script to process logic 
                                            else 
                                                a(
                                                    href=`javascript:;`
                                                    data-status="inactive"
                                                    data-id=item.id
                                                    button-change-status
                                                    class="btn btn-danger"
                                                ) #{item.status}
                                        td 
                                            button(class="btn btn-warning btn-sm") Edit 
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                button-delete
                                                data-id=item.id
                                            ) Delete
                            else
                                tr 
                                    td 
                                        input(
                                            type="checkbox"
                                            name="id"
                                            value=item.id
                                        )
                                    td #{index}
                                    td 
                                        img(
                                            src=item.thumbnail, 
                                            alt=item.title
                                            width="100px"
                                            height="auto"
                                        )
                                        td #{item.title}
                                        td #{item.price}$
                                        td 
                                            input(
                                                type="number"
                                                value=item.position 
                                                style="width: 60px"
                                                min="1"
                                                name="position"
                                            )
                                        td 
                                            button(class="btn btn-warning btn-sm") Edit 
                                            button(
                                                class="btn btn-success btn-sm ml-1"
                                                button-restore
                                                data-id=item.id
                                            ) Restore



    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    ) 
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/products/delete`
    ) 
    form(
        action=""
        method="POST"
        id="form-restore-item"
        data-path=`${prefixAdmin}/products/restore`
    ) 
    script(src="/admin/js/product.js") 


